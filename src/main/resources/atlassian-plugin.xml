<?xml version="1.0" encoding="UTF-8"?>

<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}"/>
        <param name="plugin-icon">images/pluginIcon.png</param>
        <param name="plugin-logo">images/pluginLogo.png</param>
    </plugin-info>
    <!-- add our i18n resource -->
    <resource type="i18n" name="i18n" location="authbridge"/>
    <!-- add our web resources -->
    <web-resource key="authbridge-resources" name="AuthBridge Web Resources">
        <dependency>com.atlassian.auiplugin:ajs</dependency>
        <resource type="download" name="authbridge.css" location="/css/authbridge.css"/>
        <resource type="download" name="authbridge.js" location="/js/authbridge.js"/>
        <resource type="download" name="images/" location="/images"/>
        <context>com.bes.jira.plugins.authbridge</context>
    </web-resource>
    <web-section key="auth-bridge-section"
                 name="AuthBridge Section"
                 location="admin_plugins_menu"
                 weight="110">
        <label key="auth-bridge-section.label"/>
    </web-section>
    <web-item key="auth-bridge-web-item"
              name="AuthBridge WebItem"
              section="admin_plugins_menu/auth-bridge-section"
              weight="10">
        <description>Link to auth-bridge page.</description>
        <label key="auth-bridge-web-item.label"/>
        <link linkId="auth-bridge-web-item-link">/secure/authbridge.jspa</link>
    </web-item>
    <webwork1 key="auth-bridge-webwork" name="AuthBridge WebWork" roles-required="sysadmin">
        <actions>
            <action name="com.bes.jira.plugins.authbridge.action.AuthBridgeAction"
                    alias="authbridge">
                <view name="input">/templates/AuthBridgeAction.vm</view>
            </action>
        </actions>
    </webwork1>
    <servlet name="AuthBridge Servlet" key="authbridge-servlet" class="com.bes.jira.plugins.authbridge.servlet.AuthBridgeServlet">
        <description>Provide servlet.</description>
        <url-pattern>/authbridge</url-pattern>
    </servlet>
</atlassian-plugin>
