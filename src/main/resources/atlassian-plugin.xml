<?xml version="1.0" encoding="UTF-8"?>

<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}"/>
        <param name="plugin-icon">images/pluginIcon.png</param>
        <param name="plugin-logo">images/pluginLogo.png</param>
    </plugin-info>
    <!-- add our i18n resource -->
    <resource type="i18n" name="i18n" location="oauth2bridge"/>
    <!-- add our web resources -->
    <web-resource key="oauth2bridge-resources" name="oauth2bridge Web Resources">
        <dependency>com.atlassian.auiplugin:ajs</dependency>
        <resource type="download" name="oauth2bridge.css" location="/css/oauth2bridge.css"/>
        <resource type="download" name="oauth2bridge.js" location="/js/oauth2bridge.js"/>
        <resource type="download" name="images/" location="/images"/>
        <context>com.bes.jira.plugins.oauth2bridge</context>
    </web-resource>
    <web-section key="oauth2-bridge-section"
                 name="oauth2bridge Section"
                 location="admin_plugins_menu"
                 weight="110">
        <label key="oauth2-bridge-section.label"/>
    </web-section>
    <web-item key="oauth2-bridge-web-item"
              name="oauth2bridge WebItem"
              section="admin_plugins_menu/oauth2-bridge-section"
              weight="10">
        <description>Link to oauth2-bridge page.</description>
        <label key="oauth2-bridge-web-item.label"/>
        <link linkId="oauth2-bridge-web-item-link">/secure/oauth2bridge.jspa</link>
    </web-item>
    <webwork1 key="oauth2-bridge-webwork" name="oauth2bridge WebWork" roles-required="sysadmin">
        <actions>
            <action name="com.bes.jira.plugins.oauth2bridge.action.Oauth2BridgeAction"
                    alias="oauth2bridge">
                <view name="input">/templates/Oauth2BridgeAction.vm</view>
                <view name="success">/templates/Oauth2BridgeAction.vm</view>
            </action>
        </actions>
    </webwork1>
    <servlet-filter key="oauth2bridge-oauth2-servlet-filter"
                    name="oauth2bridge Oauth2 Servlet Filter"
                    class="com.bes.jira.plugins.oauth2bridge.servlet.filter.Oauth2ServletFilter"
                    location="before-dispatch">
        <description>OAuth2Bridge Oauth2 Servlet Filter Plugin</description>
        <url-pattern>/rest/*</url-pattern>
    </servlet-filter>
</atlassian-plugin>
